//User function Template for Java
class Solution{
    static long maximumSumSubarray(int K, ArrayList<Integer> Arr,int N){
        if(N < K)
            return 0;
            
        int i =0, j = 0, sum = 0, maxSum = Integer.MIN_VALUE;
        
        while(j < N) {
            sum = sum + Arr.get(j);
            if(j-i+1 < K) {
                j++;
            } else if(j-i+1 == K) {
                maxSum = Math.max(maxSum, sum);
                
                sum = sum - Arr.get(i);
                i++;
                j++;
            }
        }
        
        return maxSum;
    }
}
